<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/grafianbackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:elevation="20dp"
        app:civ_border_color="@color/black"
        app:civ_border_width="10dp"
        android:id="@+id/gamabr_profil"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/mozart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="110dp"
        app:circularflow_radiusInDP=""/>

    <TextView
        android:background="@color/red"
        android:textColor="@color/white"
        android:id="@+id/nama_profil"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Laurens Fernando Pasaribu"
        app:layout_constraintTop_toBottomOf="@+id/gamabr_profil"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/nama_profil"
        android:text="pasaribuMozart@gmail.com"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>